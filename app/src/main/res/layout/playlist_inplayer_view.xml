<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/track_layout_height_61dp"
    android:paddingHorizontal="15dp">

    <ImageView
        android:id="@+id/playlist_player_cover"
        android:layout_width="@dimen/track_cover_size_45dp"
        android:layout_height="@dimen/track_cover_size_45dp"
        android:layout_gravity="center_vertical" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginHorizontal="@dimen/track_margin_66dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/playlist_player_name"
            style="@style/SongName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            tools:text="Best Songs Summer 2025" />

        <TextView
            android:id="@+id/playlist_player_count"
            style="@style/ArtistName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="31 трек" />
    </LinearLayout>
</FrameLayout>