<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/track_layout_height_61dp"
    android:paddingHorizontal="15dp">

    <ImageView
        android:id="@+id/TrackCover"
        android:layout_width="@dimen/track_cover_size_45dp"
        android:layout_height="@dimen/track_cover_size_45dp"
        android:layout_gravity="center_vertical" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginHorizontal="@dimen/track_margin_66dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/SongName"
            style="@style/SongName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            tools:text="Yesterday (Remastered 2009)" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ArtistName"
                style="@style/ArtistName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="The Beatles" />

            <TextView
                style="@style/ArtistName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/track_time_separator_5dp"
                android:text="â€¢" />

            <TextView
                android:id="@+id/TrackDuration"
                style="@style/ArtistName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="5:32" />

        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|center"
        android:src="@drawable/arrow_forward" />
</FrameLayout>