<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MainButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/strong_text_size</item>
        <item name="cornerRadius">@dimen/corner_radius_16dp</item>
        <item name="android:layout_marginVertical">@dimen/button_margin_8dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/icon_padding_1dp</item>
        <item name="iconSize">@dimen/icon_size_24dp</item>
        <item name="iconTint">@color/black</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="SettingsMenuLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">@dimen/default_margin</item>
        <item name="android:paddingVertical">17dp</item>
    </style>

    <style name="SettingsText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:textColor">@color/back_icon_color</item>
        <item name="android:textSize">@dimen/light_text_size</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="SettingsIcon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">end</item>
    </style>

    <style name="MainLinear">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/blue</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="HeaderStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="SongName">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/light_text_size</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ArtistName">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:textColor">@color/text_gray</item>
    </style>

    <style name="SearchErrorText">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/error_text_size</item>
        <item name="android:textColor">@color/back_icon_color</item>
    </style>

    <style name="RefreshButton">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/refresh_button_text</item>
        <item name="android:backgroundTint">@color/refresh_button_background</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">@dimen/small_button_corner_radius</item>
    </style>

    <style name="PlayerTrackName">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/back_icon_color</item>
    </style>

    <style name="PlayerTrackInfo">
        <item name="android:textSize">13sp</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/back_icon_color</item>
    </style>

    <style name="TabLayout">
        <item name="tabIndicatorColor">@color/back_icon_color</item>
        <item name="tabSelectedTextColor">@color/back_icon_color</item>
        <item name="tabTextColor">@color/back_icon_color</item>
    </style>

    <style name="Bottom_Navigation">
        <item name="android:background">@color/bottom_navigation_background</item>
        <item name="itemIconTint">@color/bottom_navigation_selector</item>
        <item name="itemTextColor">@color/bottom_navigation_selector</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="itemActiveIndicatorStyle">@null</item>
        <item name="itemPaddingTop">10dp</item>
        <item name="itemPaddingBottom">8dp</item>
    </style>

</resources>